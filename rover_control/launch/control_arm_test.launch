<launch>

    <arg name="model" default="$(find rover_config)/urdf/rover.xacro"/>
    <param name="robot_description" command="xacro --inorder '$(arg model)'" />

    <node name="motor_control" pkg="rover_control" type="rover_control_arm_node" respawn="false" output="screen" />

    <!-- Load joint controller configurations from YAML file to parameter server -->
    <rosparam command="load" file="$(find rover_control)/config/joints.yaml" ns="rover_joint_state_controller" />
    <rosparam command="load" file="$(find rover_control)/config/position_joint.yaml" />

    <!-- load the controllers -->
    <node name="controller_spawner" pkg="controller_manager" type="spawner" respawn="false" output="screen" args="rover_joint_state_controller position_joint_controller" />

</launch>
